<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Master</title>
</head>
<body>
    <h1>TASK MASTER</h1>
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <%= task.text %>
                <button>
                    <a href="/edit/<%= task.id %>">Edit Task</a> </button>

                <button type="submit">
                    <a href="/delete/<%= task.id %>">Delete</a> </button>
            </li>
        <% }) %>


    </ul>
    <form action="/addTask" method="POST">
        <input type="text" name="task" placeholder="Enter a task">
        <button type="submit">Add Task</button>
    </form>
</body>
</html>